<%- include('../partials/header') %>

<%- include('../partials/adminNav') %>

<div class="container mt-5 pt-2">
    <div class="row">
        <div class="col-md-3">
            <img src="/images/<%=user.image || "profile.png" %>" class="card-img-top">
        </div>
        <div class="col-md-6">
            <h4 class="text-center card-header pb-3">Personal Informations</h4>
            
            <ul class="list-group list-group-flush">
              <li class="list-group-item">First Name :   <%=user.firstName%></li>
              <li class="list-group-item">Last Name :   <%=user.lastName%></li>
              <li class="list-group-item">Username :   <%=user.username%></li>
              <li class="list-group-item">Joined :    <%=user.joined.toDateString()%></li>
              <li class="list-group-item">Email :  <%=user.email%> </li>
              <li class="list-group-item">Issued books :
                <% issues.forEach(issue => { %>
                    <%=issue.book_info.title + ", "%>
                <% }) %> 
              </li>
              <li class="list-group-item">Address :  <%=user.address%></li>
              <li class="list-group-item text-danger font-weight-bold">In Campus : <%=user.violationFlag%> </li>
              <li class="list-group-item">Due Fines :   $<%=user.fines%></li>
            </ul>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>